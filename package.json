{
  "name": "xs-utils",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "git:https://github.com/jsxiaosi/xs-utils.git"
  },
  "workspaces": [
    "packages/*",
    "docs"
  ],
  "author": "",
  "license": "MIT",
  "scripts": {
    "ct": "bash ./script/template.sh",
    "clean": "rimraf ./dist",
    "dev": "cd effect && npm run dev",
    "test": "echo \"Error: no test specified\" && exit 1",
    "log": "conventional-changelog -p cmyr-config -i CHANGELOG.md -s -r 0",
    "type:web": "vue-tsc -p tsconfig.web.json --composite false --noEmit",
    "type:effect": "vue-tsc -p tsconfig.effect.json --composite false --noEmit",
    "type:node": "tsc -p tsconfig.node.json --composite false --noEmit",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:serve": "vitepress serve docs --port 9581",
    "build": "pnpm run -C build build",
    "lint:eslint": "eslint \"{packages,docs,build,effect}/**/*.{vue,ts,js}\" --fix",
    "lint:prettier": "prettier --write --loglevel warn \"src/**/*.{js,json,css,scss,vue,html,md}\"",
    "lint:stylelint": "stylelint --fix \"**/*.{vue,less,postcss,css,scss}\" --cache --cache-location node_modules/.cache/stylelint/",
    "lint:pretty": "pretty-quick --staged",
    "lint:staged": "lint-staged",
    "cz": "czg",
    "prepare": "husky install",
    "release": "bump package.json packages/package.json docs/package.json"
  },
  "devDependencies": {
    "@jsdevtools/version-bump-prompt": "^6.1.0",
    "@jsxiaosi/commitlint-config": "^0.0.14",
    "@jsxiaosi/eslint-config-prettier": "^0.0.14",
    "@jsxiaosi/eslint-config-vue": "^0.0.14",
    "@types/node": "^18.11.17",
    "consola": "^2.15.3",
    "conventional-changelog-cli": "^2.2.2",
    "czg": "^1.4.1",
    "eslint": "^8.30.0",
    "fast-glob": "^3.2.12",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.20",
    "postcss-html": "^1.5.0",
    "postcss-import": "^15.1.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "2.8.1",
    "pretty-quick": "^3.1.3",
    "sass": "^1.57.1",
    "stylelint": "^14.16.0",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^5.0.0",
    "stylelint-scss": "^4.3.0",
    "typescript": "^4.9.4",
    "unplugin-vue-macros": "^1.1.1",
    "vue": "^3.2.45",
    "vue-tsc": "^1.0.16"
  },
  "dependencies": {
    "@vueuse/core": "^9.9.0"
  },
  "peerDependencyRules": {
    "ignoreMissing": [
      "vite"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "rollup",
        "source-map-*",
        "stable",
        "uuid",
        "vite*",
        "urix"
      ]
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "{!(package)*.json,*.code-snippets,.!(browserslist)*rc}": [
      "prettier --write--parser json"
    ],
    "package.json": [
      "prettier --write"
    ],
    "*.vue": [
      "eslint --fix",
      "prettier --write",
      "stylelint --fix"
    ],
    "*.{scss,less,styl,html}": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.md": [
      "prettier --write"
    ]
  }
}
